extends base

block content
  div
    video#preview
    button#actionBtn Start Recording
  if errorMessage
    span= errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video File
    input#video(type="file", accept="video/*", required, name="video")
    label(for="thumb") Thumbnail File
    input#thumb(type="file", accept="image/*", required, name="thumb")
    input(
      name="title",
      maxlength=80,
      placeholder="Title",
      type="text",
      required
    )
    input(
      name="description",
      minlength=20,
      placeholder="Description",
      type="text",
      required
    )
    input(
      name="hashtags",
      placeholder="Hashtags, separated by comma.",
      type="text",
      required
    )
    input(type="submit", value="Upload Video")

block scripts
  script(src="/static/js/recorder.js")
